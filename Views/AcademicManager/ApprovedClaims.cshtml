@model IEnumerable<CMCS.Models.Claim>

@{
    ViewData["Title"] = "Final Approved Claims";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header bg-success text-white">
        <h3 class="card-title mb-0">
            <i class="fas fa-check-double"></i> Final Approved Claims
        </h3>
        <p class="card-subtitle mb-0 mt-1">Claims that have received final approval and are ready for HR payment processing</p>
    </div>
    <div class="card-body">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Summary Cards -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card bg-light">
                    <div class="card-body text-center">
                        <h3 class="text-success">@Model.Count()</h3>
                        <p class="text-muted mb-0">Total Approved</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-light">
                    <div class="card-body text-center">
                        <h3 class="text-success">R @(Model.Sum(c => c.TotalAmount).ToString("F2"))</h3>
                        <p class="text-muted mb-0">Total Amount</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-light">
                    <div class="card-body text-center">
                        <h3 class="text-info">@(Model.Count(c => c.LastModifiedDate.Date == DateTime.Today))</h3>
                        <p class="text-muted mb-0">Approved Today</p>
                    </div>
                </div>
            </div>
        </div>

        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="approvedTable">
                    <thead class="table-success">
                        <tr>
                            <th>Claim Reference</th>
                            <th>Lecturer</th>
                            <th>Month/Year</th>
                            <th>Hours</th>
                            <th>Hourly Rate</th>
                            <th>Total Amount</th>
                            <th>Final Approval Date</th>
                            <th>PC Approval Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in Model)
                        {
                            var monthYear = new DateTime(claim.YearWorked, claim.MonthWorked, 1).ToString("MMM yyyy");
                            var pcApproval = claim.Approvals?.FirstOrDefault(a =>
                            a.Level == ApprovalLevel.PROGRAMME_COORDINATOR &&
                            a.Status == ApprovalStatus.APPROVED);
                            var amApproval = claim.Approvals?.FirstOrDefault(a =>
                            a.Level == ApprovalLevel.ACADEMIC_MANAGER &&
                            a.Status == ApprovalStatus.APPROVED);

                            <tr>
                                <td>
                                    <span class="badge bg-secondary">@claim.ClaimReference</span>
                                </td>
                                <td>
                                    <strong>@claim.Lecturer?.FirstName @claim.Lecturer?.LastName</strong>
                                    <br>
                                    <small class="text-muted">@claim.Lecturer?.Email</small>
                                </td>
                                <td>@monthYear</td>
                                <td>
                                    <span class="badge bg-info">@claim.HoursWorked.ToString("F1")</span>
                                </td>
                                <td>
                                    <small>R @claim.HourlyRate.ToString("F2")</small>
                                </td>
                                <td>
                                    <strong class="text-success">R @claim.TotalAmount.ToString("F2")</strong>
                                </td>
                                <td>
                                    @if (amApproval?.ApprovalDate != null)
                                    {
                                        <small>@amApproval.ApprovalDate.Value.ToString("dd MMM yyyy HH:mm")</small>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">N/A</span>
                                    }
                                </td>
                                <td>
                                    @if (pcApproval?.ApprovalDate != null)
                                    {
                                        <small>@pcApproval.ApprovalDate.Value.ToString("dd MMM yyyy")</small>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">N/A</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-success">@claim.Status</span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="@Url.Action("ReviewClaim", new { id = claim.ClaimId })"
                                           class="btn btn-outline-primary" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (claim.Documents != null && claim.Documents.Any())
                                        {
                                            <div class="dropdown">
                                                <button class="btn btn-outline-info dropdown-toggle" type="button"
                                                        data-bs-toggle="dropdown" title="Documents">
                                                    <i class="fas fa-paperclip"></i>
                                                </button>
                                                <ul class="dropdown-menu">
                                                    @foreach (var doc in claim.Documents.Take(3))
                                                    {
                                                        <li>
                                                            <a class="dropdown-item"
                                                               href="@Url.Action("DownloadDocument", new { documentId = doc.DocumentId })">
                                                                <i class="fas fa-download"></i> @doc.FileName
                                                            </a>
                                                        </li>
                                                    }
                                                    @if (claim.Documents.Count > 3)
                                                    {
                                                        <li><hr class="dropdown-divider"></li>
                                                        <li>
                                                            <a class="dropdown-item text-center"
                                                               href="@Url.Action("ReviewClaim", new { id = claim.ClaimId })">
                                                                <small>View all @claim.Documents.Count documents</small>
                                                            </a>
                                                        </li>
                                                    }
                                                </ul>
                                            </div>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Export Options -->
            <div class="mt-3">
                <div class="btn-group">
                    <button type="button" class="btn btn-outline-success dropdown-toggle" data-bs-toggle="dropdown">
                        <i class="fas fa-download"></i> Export Data
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#" id="exportCSV"><i class="fas fa-file-csv"></i> Export as CSV</a></li>
                        <li><a class="dropdown-item" href="#" id="exportPDF"><i class="fas fa-file-pdf"></i> Export as PDF</a></li>
                        <li><a class="dropdown-item" href="#" id="exportExcel"><i class="fas fa-file-excel"></i> Export as Excel</a></li>
                    </ul>
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-check-circle fa-4x text-muted mb-3"></i>
                <h4 class="text-muted">No Final Approved Claims</h4>
                <p class="text-muted">There are no claims that have received final approval yet.</p>
                <a href="@Url.Action("Dashboard")" class="btn btn-primary">
                    <i class="fas fa-arrow-left"></i> Back to Dashboard
                </a>
            </div>
        }
    </div>
</div>

<div class="mt-3">
    <a href="@Url.Action("Dashboard")" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to Dashboard
    </a>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize DataTable
            $('#approvedTable').DataTable({
                "pageLength": 25,
                "ordering": true,
                "searching": true,
                "responsive": true,
                "order": [[6, 'desc']], // Sort by Final Approval Date descending
                "language": {
                    "search": "Search claims:",
                    "lengthMenu": "Show _MENU_ claims per page",
                    "info": "Showing _START_ to _END_ of _TOTAL_ approved claims"
                }
            });

            // Export functionality
            $('#exportCSV').click(function() {
                alert('CSV export functionality would be implemented here');
            });

            $('#exportPDF').click(function() {
                alert('PDF export functionality would be implemented here');
            });

            $('#exportExcel').click(function() {
                alert('Excel export functionality would be implemented here');
            });
        });
    </script>

    <style>
        .table-success th {
            background-color: #198754;
            color: white;
        }

        .badge {
            font-size: 0.75em;
        }

        .btn-group-sm > .btn {
            padding: 0.25rem 0.5rem;
        }
    </style>
}