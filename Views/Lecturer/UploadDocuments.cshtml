@{
    ViewData["Title"] = "Upload Documents";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Upload Supporting Documents</h3>
                <p class="card-subtitle text-muted">Claim Reference: @ViewBag.ClaimReference</p>
            </div>
            <div class="card-body">
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <div class="alert alert-info">
                    <h6><i class="fas fa-info-circle"></i> Upload Guidelines</h6>
                    <ul class="mb-0">
                        <li>Allowed file types: PDF, DOCX, XLSX</li>
                        <li>Maximum file size: 10MB per file</li>
                        <li>Upload supporting documents like timesheets, contracts, or approval emails</li>
                    </ul>
                </div>

                <form asp-action="UploadDocuments" method="post" enctype="multipart/form-data" id="uploadForm">
                    <input type="hidden" name="claimId" value="@ViewBag.ClaimId" />

                    <div class="form-group mb-3">
                        <label for="file" class="form-label">Select File *</label>
                        <input type="file" name="file" class="form-control" id="file" required
                               accept=".pdf,.docx,.xlsx" />
                        <div class="form-text">Choose a PDF, Word document, or Excel file</div>
                    </div>

                    <div class="form-group mb-4">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="description" class="form-control" rows="3"
                                  placeholder="Brief description of this document..."></textarea>
                    </div>

                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <h6 class="card-title">File Information</h6>
                            <div id="fileInfo">
                                <p class="text-muted mb-0">No file selected</p>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="ViewClaims" class="btn btn-secondary me-md-2">
                                <i class="fas fa-arrow-left"></i> Back to Claims
                            </a>
                            <button type="submit" class="btn btn-primary" id="uploadButton">
                                <i class="fas fa-upload"></i> Upload Document
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // File selection handler
            $('#file').on('change', function () {
                var file = this.files[0];
                var fileInfo = $('#fileInfo');

                if (file) {
                    var fileSize = (file.size / 1024 / 1024).toFixed(2); // MB
                    var fileInfoHtml = `
                        <p><strong>File Name:</strong> ${file.name}</p>
                        <p><strong>File Size:</strong> ${fileSize} MB</p>
                        <p><strong>File Type:</strong> ${file.type || 'Unknown'}</p>
                    `;
                    fileInfo.html(fileInfoHtml);

                    // Validate file size
                    if (file.size > 10 * 1024 * 1024) {
                        alert('File size exceeds 10MB limit. Please choose a smaller file.');
                        $(this).val('');
                        fileInfo.html('<p class="text-muted mb-0">No file selected</p>');
                    }
                } else {
                    fileInfo.html('<p class="text-muted mb-0">No file selected</p>');
                }
            });

            // Form submission
            $('#uploadForm').on('submit', function () {
                var file = $('#file')[0].files[0];
                if (!file) {
                    alert('Please select a file to upload.');
                    return false;
                }

                // Show loading state
                $('#uploadButton').prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Uploading...');
                return true;
            });
        });
    </script>
}