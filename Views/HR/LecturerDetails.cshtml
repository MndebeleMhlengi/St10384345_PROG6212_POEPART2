@model CMCS.Models.User

@{
    ViewData["Title"] = "Lecturer Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-user"></i> Lecturer Information
                </h5>
            </div>
            <div class="card-body">
                <div class="text-center mb-3">
                    <div class="bg-primary rounded-circle d-inline-flex align-items-center justify-content-center"
                         style="width: 80px; height: 80px;">
                        <i class="fas fa-user fa-2x text-white"></i>
                    </div>
                    <h4 class="mt-2">@Model.FirstName @Model.LastName</h4>
                    <p class="text-muted">@Model.Email</p>
                </div>

                <dl class="row">
                    <dt class="col-sm-5">Status:</dt>
                    <dd class="col-sm-7">
                        <span class="badge bg-@(Model.IsActive ? "success" : "danger")">
                            @(Model.IsActive ? "Active" : "Inactive")
                        </span>
                    </dd>

                    <dt class="col-sm-5">Hourly Rate:</dt>
                    <dd class="col-sm-7">R @Model.HourlyRate.ToString("F2")</dd>

                    <dt class="col-sm-5">Total Claims:</dt>
                    <dd class="col-sm-7">@ViewBag.TotalClaims</dd>

                    <dt class="col-sm-5">Total Paid:</dt>
                    <dd class="col-sm-7 text-success">R @ViewBag.TotalAmount.ToString("F2")</dd>

                    <dt class="col-sm-5">Last Updated:</dt>
                    <dd class="col-sm-7">@Model.LastModifiedDate.ToString("dd MMM yyyy")</dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-history"></i> Claims History
                </h5>
            </div>
            <div class="card-body">
                @if (ViewBag.Claims != null && ((IEnumerable<dynamic>)ViewBag.Claims).Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm table-striped">
                            <thead>
                                <tr>
                                    <th>Reference</th>
                                    <th>Period</th>
                                    <th>Hours</th>
                                    <th>Amount</th>
                                    <th>Status</th>
                                    <th>Submitted</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var claim in (IEnumerable<CMCS.Models.Claim>)ViewBag.Claims)
                                {
                                    var monthYear = new DateTime(claim.YearWorked, claim.MonthWorked, 1).ToString("MMM yyyy");
                                    var statusClass = claim.Status switch
                                    {
                                        ClaimStatus.PAID => "bg-success",
                                        ClaimStatus.APPROVED_FINAL => "bg-info",
                                        ClaimStatus.REJECTED => "bg-danger",
                                        _ => "bg-warning"
                                    };

                                    <tr>
                                        <td>
                                            <small class="badge bg-secondary">@claim.ClaimReference</small>
                                        </td>
                                        <td>@monthYear</td>
                                        <td>@claim.HoursWorked.ToString("F1")</td>
                                        <td>R @claim.TotalAmount.ToString("F2")</td>
                                        <td>
                                            <span class="badge @statusClass">@claim.Status</span>
                                        </td>
                                        <td>
                                            <small>@claim.SubmissionDate.ToString("dd MMM yyyy")</small>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                        <p class="text-muted">No claims found for this lecturer.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="ManageLecturers" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to Lecturers
    </a>
</div>